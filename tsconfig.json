{
	"version": "2.2.2",
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"jsx": "preserve",
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"removeComments": false,
		"baseUrl": ".",
		"paths": {
			"react": ["./src/types/react"],
			"react-dom": ["./src/types/react"]
		},
		"reactNamespace": "Inferno"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}