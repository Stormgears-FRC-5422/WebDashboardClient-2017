{
	"version": "2.2.2",
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"types": [
			"inferno",
			"node",
			"tether"
		],
		"jsx": "preserve",
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"removeComments": false,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"react": ["inferno-compat"],
			"react-dom": ["inferno-compat"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}